{
  "env": {
    "es6": true,
    "mocha": true,
    "browser": true
  },

  "parserOptions": {
    "sourceType": "module"
  },

  "extends": "standard",

  "rules": {
    "semi": ["error", "always"],
    "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true } }],
    "promise/param-names": 0
  }
}
